{
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
